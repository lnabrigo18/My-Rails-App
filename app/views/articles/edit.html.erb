<h1 class="text-center mt-3">Edit this note..</h1>

<% if @article.errors.any? %>
  <ul class="text-center">
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div class="row justify-content-center ">
    <div class="col-7">
    <%= form_with(model: @article, class: "shadow p-3 mb-2 bg-info bg-gradient rounded", local: true) do |f| %>
        <div class="form-group row mt-3">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of the book.." %>
        </div>
    </div>

  <div class="form-group row mt-3">
    <%= f.label :notes, class: "col-2 col-form-label text-light" %>
    <div class="col-10"> 
      <%= f.text_area :body, rows: 10, class: "form-control shadow rounded", placeholder: "Write your notes.." %>
    </div>
  </div>

  <p class="text-center mt-3">
  <%= submit_tag( "Update Note" ) %>
  <%= submit_tag( "Cancel Edit" ) %>
  </p>

<% end %> 
